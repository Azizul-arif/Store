 @model  Microsoft.AspNetCore.Identity.IdentityRole
 
 
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
 <section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Quick Example</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-action="Edit" asp-controller="RoleManager">
                        <div class="card-body">
                            <div class="form-group">
                                <input type="text" class="form-control" asp-for="Id" hidden />
                                <label for="exampleInputEmail1">Role Name</label>
                                <input type="text" class="form-control" id="Name" name="name" asp-for="Name"
                                       placeholder="Enter Name">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->

            </div>
        </div>
    </div>
</section>