@model Ecommerce.Data.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row col-12">
            <form method="post" asp-action="Create" class="col-12">
                <div class="form-group col-12 d-flex flex-wrap my-2">
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.categoryList as SelectList">
                            <option selected disabled>--Select Category--</option>
                        </select>
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <label asp-for="Name"></label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <label asp-for="Description"></label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <label asp-for="Price"></label>
                        <input type="number" class="form-control" asp-for="Price" />
                        <span asp-validation-for="Price"></span>
                    </div>
                </div>
                <div class="form-group col-md-2 col-lg-2 col-sm-12">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>



            </form>

        </div>

    </div>
</div>