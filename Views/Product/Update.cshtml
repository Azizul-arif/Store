@model Ecommerce.Data.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="Update">
            <div class="form-group">
                <input asp-for="Id" hidden />
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.categoryList as SelectList">
                        <option selected disabled>--Select Category--</option>
                    </select>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="Description"></label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="Price"></label>
                    <input type="number" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price"></span>
                </div>

            </div>
            <button class="btn btn-primary" type="submit">Update</button>
            <a class="btn btn-info" asp-action="Index" asp-controller="product">Back</a>

        </form>
    </div>
</div>